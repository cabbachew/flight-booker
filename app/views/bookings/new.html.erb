<h2>bookings#new</h2>

<p><%= params %></p>

<p><%= Flight.find(params[:flight_id]).summary %></p>
<p>Number of passengers: <%= params[:num_tickets] %></p>

<%= simple_form_for @booking do |f| %>
  <%= f.input :flight_id, as: :hidden, input_html: { value: params[:flight_id] } %>
  <%= f.simple_fields_for(:passengers) do |passenger_form| %>
    <%= passenger_form.input :first_name %>
    <%= passenger_form.input :last_name %>
    <%= passenger_form.input :email %><br>
  <% end %>
  <%= hidden_field_tag "flight_id", params[:flight_id] %>
  <%= hidden_field_tag "num_tickets", params[:num_tickets] %>
  <%= f.button :submit %>
<% end %>